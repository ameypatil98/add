<h3> Questions</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Questions</th>
            <th>Choice 1</th>
            <th>Choice 2</th>
            <th>Answer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.question}}</td>
            <td>{{this.a}}</td>
            <td>{{this.b}}</td>
            <td>{{this.answer}}</td>
            <td>
                <a href="/questions/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/questions/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this question ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<a class="btn btn-secondary" href="/questions"><i class="fa fa-plus"></i> Create New</a>
